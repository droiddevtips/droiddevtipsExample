<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon_background"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon_background_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DroidDevTipsExamples">
        <activity
            android:name=".common.videoPlayer.ui.VideoPlayerActivity"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation"
            android:exported="true"
            android:launchMode="singleTask"
            android:supportsPictureInPicture="true"
            android:theme="@style/Theme.DroidDevTipsExamples"/>
        <activity
            android:name=".FloatingTabBarAndPipMainActivity"
            android:exported="true"
            android:theme="@style/Theme.DroidDevTipsExamples">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".common.videoPlayer.ui.receiver.RemoteViewBroadcastReceiver"
            android:enabled="true"
            android:exported="false">
        </receiver>


    </application>

</manifest>